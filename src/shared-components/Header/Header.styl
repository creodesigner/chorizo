@import '../../stylus/vars'

$header-height = 5rem

#header
  grid-area header

  &.menu-open
    a
    h2
      color white

    .bars
      &:hover
        transform rotate(45deg)
      .bar
        background white !important

  &
  .header-fixed
    height $header-height

  .header-fixed
    align-items center
    display flex
    justify-content space-between
    position relative
    z-index 1000

    @media screen and (min-width: 768px)
      position fixed
      width 100%

  a
    color $mint
    font-size 1.2rem
    font-weight 700
    text-decoration none

  h1
    font-size 2rem
    font-weight 200

  h2
    color $gray
    font-size 1.5rem
    font-weight 200

  .nav-wrapper
    align-items center
    display inline-flex

    h2
      margin-bottom 0
      margin-right 1rem
      text-transform capitalize

      @media screen and (min-width: 768px)
        margin-right 2rem

  .bars
    cursor pointer
    display flex
    flex-direction column
    height 2.5rem
    justify-content space-around
    padding .25rem 0
    transition all .25s
    width 2rem

    &:hover
      .bar
        background $mint

        &.top
          transform rotate(90deg) translateX(35%)
        &.bottom
          opacity 0
          transform rotate(90deg)

    .bar
      background $gray
      height .125rem
      transition all .3s
