@import '../../stylus/vars'

#menu
  align-items center
  background $neon-green
  display flex
  flex-direction column
  height 100%
  justify-content center
  left 0
  padding 2rem
  position fixed
  top 0
  width 100%

  a
    color white
    font-size 2rem
    margin-bottom 1rem
    text-decoration none

  hr
    border none
    border-top 1px solid rgba(white, .6)
    height 0
    margin 3rem
    max-width 30rem
    width 100%
